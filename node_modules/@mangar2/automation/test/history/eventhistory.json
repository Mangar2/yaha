            {
                "description": "no motion",
                "motions": [
                ],
                "expected": {
                    "motions": { 
                    }
                }
            },
            {
                "description": "single actual motion, value 0",
                "motions": [
                    { "topic": "/room1/motion", "value": 0, "reason": "motion detected", "seconds": 0 }
                ],
                "expected": {
                    "motions": { }
