            { "description":"a/b/", "topic": "a/b/", "expected": false },
            { "description":"a/b/d", "topic": "a/b/d", "expected": false },
            { "description":"a/b/c/d", "topic": "a/b/c/d", "expected": false },
            { "description":"a/c/c", "topic": "a/c/c", "expected": false },
            { "description":"/a/b/c", "topic": "/a/b/c", "expected": false },
            { "description":"b/b/c", "topic": "b/b/c", "expected": false },
            { "description":"a/a/c", "topic": "a/a/c", "expected": false },
            { "description":"aa/b/c", "topic": "aa/b/c", "expected": false },
            { "description":"a/bb/c", "topic": "a/bb/c", "expected": false },
            { "description":"a/B/c", "topic": "a/bb/c", "expected": false },
            { "description":"a/b/C", "topic": "a/bb/c", "expected": false },
            { "description":"a/b/cc", "topic": "a/b/cc", "expected": false }
        ]
    },
    {
        "description": "Matches anything",
        "pattern": "#",
        "tests": [
            { "description":"any", "topic": "any", "expected": true },
            { "description":"not $any", "topic": "$any", "expected": false },
            { "description":"path", "topic": "a/b", "expected": true },
            { "description":"empty", "topic": "", "expected": true },
            { "description":"path starting with '/'", "topic": "/a/b", "expected": true },
            { "description":"not $SYS", "topic": "$SYS", "expected": false },
            { "description":"not $SYS/", "topic": "$SYS/", "expected": false }
        ]
   },
   {
        "description": "Matches /#",
        "pattern": "/#",
        "tests": [
            { "description":"any", "topic": "any", "expected": false },
            { "description":"/", "topic": "/", "expected": true },
            { "description":"/any", "topic": "/any", "expected": true },
            { "description":"a/b", "topic": "a/b", "expected": false },
            { "description":"path starting with '/'", "topic": "/a/b", "expected": true },
            { "description":"/$SYS", "topic": "/$SYS", "expected": true }
        ]
    },
    {
         "description": "Matches any with fixed starting string",
         "pattern": "/hello/#",
         "tests": [
             { "description":"/", "topic": "/", "expected": false },
             { "description":"/#", "topic": "/#", "expected": false },
             { "description":"/hello", "topic": "/hello", "expected": false },
             { "description":"/hello#", "topic": "/hello#", "expected": false },
             { "description":"/hell/a", "topic": "/hell/a", "expected": false },
             { "description":"/hello/", "topic": "/hello/", "expected": true },
             { "description":"/hello/world", "topic": "/hello/world", "expected": true },
             { "description":"/hello/my/world", "topic": "/hello/my/world", "expected": true },
             { "description":"/hello/my/world/#", "topic": "/hello/world/my/world/#", "expected": true },
             { "description":"/hello/my/world/+", "topic": "/hello/world/my/world/+", "expected": true }
         ]
     },
     {
        "description": "Matches +",
