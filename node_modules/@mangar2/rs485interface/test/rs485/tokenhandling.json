[
    {
        "description": "boot to single",
        "tests": [
            {
                "description": "The reboot state will send 10 registration requests",
                "messageAmount": 10,
                "expected": [
                    "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest", 
                    "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest"
                ]
            },
            {
                "description": "the reboot state will result in single state after timeout, we still get registration requests",
                "messageAmount": 5,
                "expected": [
                    "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest"
                ]
            }
        ]
    },
    {
        "description": "enable send in boot",
        "tests": [
            {
                "description": "we will jump to unregistered state if we receive an enable send request",
                "receive": ["enableSend", 2, 0],
                "messageAmount": 3,
                "expected": [
                    {"command": "enableSend", "sender": 1, "receiver": 2 }
                ]
            },
            {
                "description": "we get back to reboot after timeout and again receive registration requests",
                "messageAmount": 5,
                "expected": [
                    "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest", "registrationRequest"
                ]
            }
        ]
    }
]