[
    {
        "description": "Test registration info and registration request messages",
        "tests": [
            {
                "description": "Goto Reboot",
                "noMessage": 101,
                "result": "stateChanged"
            },
            {
                "description": "Registration infos must result in unchanged state",
                "request": "registrationInfo",
                "expected": { "result": "stateUnchanged", "maySend": false }
            },
            {
                "description": "Registration requests must result in registration info",
                "request": "registrationRequest",
                "expected": { "result": "registrationInfo", "maySend": false }
            }
        ]
    },
    {
        "description": "Test enable send",
        "tests": [
            {
                "description": "Goto Reboot",
                "noMessage": 101,
                "result": "stateChanged"
            },
            {
                "description": "Enable send must result in a state change",
                "request": "enableSend",
                "expected": { "result": "stateChanged", "maySend": true }
            }
        ]
    },
    {
        "description": "Test loops without external message",
        "tests": [
            {
                "description": "Goto Reboot",
                "noMessage": 101,
                "result": "stateChanged"
            },
            {
                "description": "Loop starts (every 10 ticks) results in registration request",
                "noMessage": 1,
                "expected": {
                    "result": "registrationRequest",
                    "rightSibling": "unknown",
                    "leftmostSibling": "unknown"
                }
            },
            {
                "description": "Reboot state must be unchanged for 100 ticks",
                "noMessage": 99,
                "expected": { "result": "stateUnchanged", "maySend": false }
            },
            {
                "description": "Reboot state must change the state at exactly 100 ticks",
                "noMessage": 1,
                "expected": { "result": "stateChanged", "maySend": false }
            }
        ]
    }
]