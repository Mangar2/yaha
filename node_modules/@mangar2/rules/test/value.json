[
    {
        "rule": {
            "name": "basic value",
            "topic": "topic",
            "value": "hello",
            "QoS": 0
        },
        "tests": [
            {
                "name": "simple value",
                "messages": 1,
                "topic": "topic",
                "value": "hello",
                "QoS": 0
            }
        ]
    },
    {
        "rule": {
            "name": "value with variable",
            "topic": "topic",
            "value": "/hello",
            "QoS": 2
        },
        "tests": [
            {
                "name": "value with variable",
                "variables": {"/hello": "one"},
                "messages": 1,
                "topic": "topic",
                "value": "one",
                "QoS": 2
            }
        ]
    },
    {
        "rule": {
            "name": "value with calculation",
            "topic": "topic",
            "value": ["switch", "/variable", { "one": "on", "two": "off" }]
        },
        "tests": [
            {
                "name": "value with variable is one ",
                "variables": {"/variable": "one"},
                "messages": 1,
                "topic": "topic",
                "value": 1
            },
            {
                "name": "value with variable is two ",
                "variables": {"/variable": "two"},
                "messages": 1,
                "topic": "topic",
                "value": 0,
                "QoS": 1
            }
        ]
    },
    {
        "rule": {
            "name": "value in topic",
            "topic": { "sendTopic" : "on" }
        },
        "tests": [
            {
                "name": "value in topic",
                "messages": 1,
                "topic": "sendTopic",
                "value": 1,
                "QoS": 1
            }
        ]
    },
    {
        "rule": {
            "name": "multiple topics",
            "topic": { "sendTopic1" : "on", "sendTopic2" : "off" }
        },
        "tests": [
            {
                "name": "multiple topics with multiple values",
                "messages": 2,
                "topic": "sendTopic1",
                "value": 1,
                "QoS": 1
            }
        ]
    },
    {
        "rule": {
            "name": "multiple value with",
            "topic": { "sendTopic1" : ["switch", "/variable", { "one": "absent", "two": "present" }], "sendTopic2" : "off" }
        },
        "tests": [
            {
                "name": "value with variable is one ",
                "variables": {"/variable": "one"},
                "messages": 2,
                "topic": ["sendTopic1", "sendTopic2"],
                "value": ["absent", 0],
                "QoS": [1, 1]
            },
            {
                "name": "value with variable is two ",
                "variables": {"/variable": "two"},
                "messages": 2,
                "topic": ["sendTopic1", "sendTopic2"],
                "value": ["present", 0],
                "QoS": [1, 1]
            }
        ]
    }

]
