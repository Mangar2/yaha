[
    {
        "rule": {
            "topic": "topic",
            "value": "hello",
            "QoS": 0
        },
        "tests": [
            {
                "name": "simple value",
                "messages": 1,
                "topic": "topic",
                "value": "hello",
                "QoS": 0
            }
        ]
    },
    {
        "rule": {
            "topic": "topic",
            "value": "/hello",
            "QoS": 2
        },
        "tests": [
            {
                "name": "value with variable",
                "variables": {"/hello": "one"},
                "messages": 1,
                "topic": "topic",
                "value": "one",
                "QoS": 2
            }
        ]
    },
    {
        "rule": {
            "topic": "topic",
            "value": ["switch", "/variable", { "one": "on", "two": "off" }]
        },
        "tests": [
            {
                "name": "value with variable is one ",
                "variables": {"/variable": "one"},
                "messages": 1,
                "topic": "topic",
                "value": 1
            },
            {
                "name": "value with variable is two ",
                "variables": {"/variable": "two"},
                "messages": 1,
                "topic": "topic",
                "value": 0,
                "QoS": 1
            }
        ]
    }

]
