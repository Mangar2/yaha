[
    {
        "description": "device messages",
        "version": 1,
        "tests": [
            {
                "description": "brightness message",
                "serial": {
                    "interfaceName": "i2c",
                    "sender": 3,
                    "receiver": null,
                    "command": "L",
                    "value": 300
                },
                "expected": [{
                    "topic": "level0/room1/device1/i2c/brightness sensor/brightness",
                    "value": 300
                }]
            },
            {
                "description": "brightness message, sender as string",
                "serial": {
                    "interfaceName": "i2c",
                    "sender": "3",
                    "receiver": null,
                    "command": "L",
                    "value": 300
                },
                "expected": [{
                    "topic": "level0/room1/device1/i2c/brightness sensor/brightness",
                    "value": 300
                }]
            },
            {
                "description": "temperature message",
                "serial": {
                    "interfaceName": "i2c",
                    "sender": "main",
                    "receiver": null,
                    "command": "WardrobeTempSys",
                    "value": "31.37"
                },
                "expected": [{
                    "topic": "$SYS/central/i2c/status/temperature",
                    "value": "31.37"
                }]
            }

        ]
    },
    {
        "description": "FS20 message",
        "tests": [
            {
                "description": "switch off",
                "serial": {
                    "interfaceName": "fs20",
                    "sender": null,
                    "receiver": null,
                    "command": "12322324/2111",
                    "value": "off",
                    "action": "/set"
                },
                "expected": [{
                    "topic": "level0/room1/fs20/task/one/set",
                    "value": "off"
                }]
            },
            {
                "description": "switch on",
                "serial": {
                    "interfaceName": "fs20",
                    "sender": null,
                    "receiver": null,
                    "command": "12322324/2112",
                    "value": "on",
                    "action": "/set"
                },
                "expected": [{
                    "topic": "level2/room1/fs20/task/two/set",
                    "value": "on"
                }]
            }

        ]
    },
    {
        "description": "switch messages",
        "version": 1,
        "tests": [
            {
                "description": "real life",
                "serial": {
                    "interfaceName": "switch",
                    "sender": "main",
                    "receiver": null,
                    "command": "switch",
                    "value": 102
                },
                "expected": [
                    {
                        "topic": "level0/room1/switch/one",
                        "value": "off"
                    },
                    {
                        "topic": "level1/room1/switch/two",
                        "value": "on"
                    },
                    {
                        "topic": "level1/room1/switch/three",
                        "value": "on"
                    },
                    {
                        "topic": "level1/room1/switch/four",
                        "value": "off"
                    },
                    {
                        "topic": "level1/room1/switch/five",
                        "value": "off"
                    },
                    {
                        "topic": "level1/room1/switch/six",
                        "value": "on"
                    },
                    {
                        "topic": "level1/room1/switch/seven",
                        "value": "on"
                    },
                    {
                        "topic": "level1/room1/switch/eight",
                        "value": "off"
                    }
                ]
            }
        ]
    }

