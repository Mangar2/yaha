[
    {
        "description": "device messages",
        "version": 1,
        "tests": [
            {
                "description": "brightness message",
                "serial": {
                    "sender": 3,
                    "receiver": null,
                    "command": "L",
                    "value": 300
                },
                "expected": [{
                    "topic": "level0/room1/device1/brightness sensor/brightness",
                    "value": 300
                }]
            },
            {
                "description": "temperature message",
                "serial": {
                    "sender": "main",
                    "receiver": null,
                    "command": "WardrobeTempSys",
                    "value": "31.37"
                },
                "expected": [{
                    "topic": "$SYS/central/status/temperature",
                    "value": "31.37"
                }]
            }

        ]
    },
    {
        "description": "FS20 message",
        "tests": [
            {
